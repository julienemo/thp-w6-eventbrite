<h4>Update your profile</h4>

<div class="form" style="width:70%;">
  <p><br />User ID: <%= current_user.id%></p>

    <%= form_tag user_path(current_user.id), method: :put do %>
       <div class="form-group">
         <lable for="first_name">Your first name:</lable>
         <div class="input-group">
          <input type="text" class="form-control" name="first_name"
          <% if current_user.first_name == "" || current_user.first_name == nil %>
            placeholder=<%= current_user.first_name%>
          <% else %>
            value=<%=current_user.first_name %>
          <% end %>>
         </div>
       </div>

       <div class="form-group">
         <lable for="last_name">Your last name:</lable>
         <div class="input-group">
           <input type="text" class="form-control"  name="last_name"
           <% if current_user.last_name == "" || current_user.last_name == nil %>
             placeholder=<%= current_user.last_name%>
           <% else %>
             value=<%=current_user.last_name %>
           <% end %>>
         </div>
       </div>

       <div class="form-group">
         <lable for="last_name">Say something about yourself?</lable>
         <div class="input-group">
           <input type="text" class="form-control" name="description"
           <% if current_user.description == "" || current_user.description == nil %>
             placeholder=<%= current_user.description %>
           <% else %>
             value=<%=current_user.description %>
           <% end %>>

         </div>
       </div>

        <lable for="avatar">How about a profile photo?</lable>
        <div class="input-group">
          <%= file_field_tag :avatar do %>
            <form action="user_avatars_path(current_user.id)" method="post">
            <input type='submit' class="btn btn-secondary" value="Upload photo">
          <% end %>
        </div>
       <div class="form-group">
           <button type="submit" class="btn btn-primary btn-lg">Update</button>
       </div>
       <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <% end %>
