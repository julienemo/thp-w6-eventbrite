<!DOCTYPE html>
<html>
  <head>
    <title>Julie's events</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!--theme links-->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding: 10px 20px;">
        <div>
          <ul class="form-inline">
            <li><a class="navbar-brand" href="/">Julie's events</a></li>
            <li><a class="nav-link" href="/">Home</a></li>
            <% if user_signed_in? %>
            <li><a class="nav-link" href="/events/new">New event</a></li>
            <li><a class="nav-link" href="/users/show">My profile</a></li>
            <% end %>
          </ul>
        </div>
        <div>
          <ul class="form-inline">
            <% unless user_signed_in? %>
            <li><a class="nav-link" href="/users/sign_in">Sign In</a></li>
            <li><a class="nav-link" href="/users/sign_up">Sign Up</a></li>
            <% else %>
            <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <div class="text-center">
    <% if flash[:success] %>
      <div class="alert alert-success" role="alert">
        <%= flash[:success] %>
      </div>
    <% elsif flash[:danger] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:danger] %>
      </div>
    <% end %>
    </div>
    <div class = "body">
    <%= yield %>
    </div>
  </body>
</html>
