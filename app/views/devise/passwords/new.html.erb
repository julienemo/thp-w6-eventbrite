<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', style: 'width:50%;' %><br />
  </div>

  <div class="d-flex flex-wrap justify-content-between" style="width:50%;">
    <div class="actions">
      <%= f.submit "Send instructions",class: 'btn btn-primary col' %>
    </div>
<% end %>
    <%= render "devise/shared/links" %>
  </div>
