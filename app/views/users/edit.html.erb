<div style="display: inline-block">
<h4>Update your profile</h4>

<div class="form" style="width:100%;">
  <p><br />User ID: <%= current_user.id%></p>

    <%= form_tag user_path(current_user.id), multipart: true, method: :put do %>
       <div class="form-group">
         <label for="first_name">Your first name:</label>
          <input type="text" class="form-control" name="first_name"
            value="<%= current_user.first_name%>" />
        </div>

       <div class="form-group">
         <label for="last_name">Your last name:</label>
           <input type="text" class="form-control"  name="last_name"
             value="<%= current_user.last_name%>"/>
       </div>

       <div class="form-group">
         <label for="last_name">Say something about yourself?</label>
           <input type="text" class="form-control" name="description"
            value="<%= current_user.description %>" />
       </div>

       <div class="form-group">
        <label for="avatar">How about a profile photo?</label>
          <input type='file' name='avatar' class='form-control'/>
      </div>

       <div class="form-group">
           <button type="submit" class="btn btn-primary btn-lg">Update</button>
       </div>
       <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <% end %>
</div>
